<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- ✅ namespace 一定要改成和你 Java 接口完全一样 -->
<mapper namespace="com.sg.nusiss.developer.mapper.DeveloperProfileMapper">

    <!-- ✅ 同时也建议改掉 type 的路径，指向你现在 entity 的包 -->
    <resultMap id="BaseResultMap" type="com.sg.nusiss.developer.entity.DeveloperProfile">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="project_count" property="projectCount"/>
    </resultMap>

    <select id="findById" resultMap="BaseResultMap" parameterType="string">
        SELECT id, user_id, project_count
        FROM developer_profile
        WHERE id = #{id}
    </select>

    <select id="findByUserId" resultMap="BaseResultMap" parameterType="string">
        SELECT id, user_id, project_count
        FROM developer_profile
        WHERE user_id = #{userId}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT id, user_id, project_count
        FROM developer_profile
    </select>

    <insert id="insert" parameterType="com.sg.nusiss.developer.entity.DeveloperProfile">
        INSERT INTO developer_profile (id, user_id, project_count)
        VALUES (#{id}, #{userId}, #{projectCount})
    </insert>

    <insert id="batchInsert">
        INSERT INTO developer_profile (id, user_id, project_count)
        VALUES
        <foreach collection="profiles" item="item" separator=",">
            (#{item.id}, #{item.userId}, #{item.projectCount})
        </foreach>
    </insert>

    <update id="updateById" parameterType="com.sg.nusiss.developer.entity.DeveloperProfile">
        UPDATE developer_profile
        SET user_id = #{userId},
            project_count = #{projectCount}
        WHERE id = #{id}
    </update>

    <update id="updateProjectCountById" parameterType="map">
        UPDATE developer_profile
        SET project_count = #{projectCount}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="string">
        DELETE FROM developer_profile
        WHERE id = #{id}
    </delete>

    <delete id="deleteByUserId" parameterType="string">
        DELETE FROM developer_profile
        WHERE user_id = #{userId}
    </delete>

    <select id="count" resultType="long">
        SELECT COUNT(1) FROM developer_profile
    </select>

</mapper>
